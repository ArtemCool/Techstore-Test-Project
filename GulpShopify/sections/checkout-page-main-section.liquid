<section class="checkout-page-main-section">
    <div class="container">
        <div class="checkout-upper-links">
            <a href="index.html">Home</a>
            <span>›</span>
            <a href="cart.html">Shopping Cart</a>
            <span>›</span>
            <p>Checkout Process</p>
        </div>
        <div class="checkout-heading">
            <div class="checkout-heading-left-side">
                <h2>Checkout</h2>
                <a href="login.html">Sign In</a>
            </div>
            <div class="checkout-heading-right-side">
                <div class="checkout-heqding-group-wrapper">
                    <div class="left-line"></div>
                    <div class="checkout-shipping-arrow-wrapper">
                        <img src="../img/checkout-check-arrow.svg" 
                            alt="checked arrow"
                            loading="lazy">
                    </div>
                    <div class="right-line"></div>
                    <div class="right-one-left-line"></div>
                    <div class="checkout-rewiev-wrapper">
                        <span>2</span>
                    </div>
                    <div class="right-one-right-line"></div>
                </div>
                <div class="checkout-heading-description">
                    <p>Shipping</p>
                    <span>Review & Payments</span>
                </div>
            </div>
        </div>
        <div class="checkout-main-part">
            <div class="checkout-left-side">
                <div class="checkout-left-side-heading">
                    <h3>Shipping Address</h3>
                </div>
                <div class="checkout-inputs">
                    <div class="checkout-input-item">
                        <label>Email Address <p>*</p></label>
                        <input type="email" placeholder="Your Email">
                    </div>
                    <div class="checkout-inputs-account-description">
                        <p>You can create an account after checkout.</p>
                    </div>
                    <div class="checkout-input-item">
                        <label>First Name <p>*</p></label>
                        <input type="text" placeholder="Your First Name">
                    </div>
                    <div class="checkout-input-item">
                        <label>Last Name <p>*</p></label>
                        <input type="text" placeholder="Your Last Name">
                    </div>
                    <div class="checkout-input-item">
                        <label>Company <p>*</p></label>
                        <input type="text" placeholder="Your Company">
                    </div>
                    <div class="checkout-input-item">
                        <label>Street Address <p>*</p></label>
                        <input type="text" placeholder="Your Street Address">
                    </div>
                    <div class="checkout-input-item">
                        <label>City <p>*</p></label>
                        <input type="text" placeholder="Your City">
                    </div>
                    <div class="checkout-input-item">
                        <label>Country <p>*</p></label>
                        <input type="button" placeholder="Your Country">
                    </div>
                    <div class="checkout-input-item">
                        <label>State/Province <p>*</p></label>
                        <input type="button" placeholder="Your State/Province">
                    </div>
                    <div class="checkout-input-item">
                        <label>Zip/Postal Code <p>*</p></label>
                        <input type="text" placeholder="Your Zip/Postal Code">
                    </div>
                    <div class="checkout-input-item">
                        <label>Phone Number <p>*</p></label>
                        <input type="tel" placeholder="Your Phone Number">
                    </div>
                </div>
                <div class="cheackout-checkbox-part">
                    <div class="checkout-checkbox-item">
                        <h4>Standard Rate</h4>
                        <div class="checkout-checkbox-flex">
                            <div class="checkout-checkbox-left">
                                <label class="switch change-closed">
                                    <input type="checkbox"><span class="slider round"></span>
                                </label>
                                <p>Price may vary depending on the item/destination. Shop Staff will contact you.</p>
                            </div>
                            <div class="checkout-checkbox-right">
                                <p>$21.00</p>
                            </div>
                        </div>
                    </div>
                    <div class="checkout-checkbox-item">
                        <h4>Pickup from store</h4>
                        <div class="checkout-checkbox-flex">
                            <div class="checkout-checkbox-left">
                                <label class="switch change-closed">
                                    <input type="checkbox"><span class="slider round"></span>
                                </label>
                                <p>1234 Street Adress City Address, 1234</p>
                            </div>
                            <div class="checkout-checkbox-right">
                                <p>$0.00</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="checkout-next-button">
                    <button type="submit" class="checkout-next-button-item">Next</button>
                </div>
            </div>
            <div class="checkout-right-side">
                <div class="checkout-right-side-wrapper">
                    <div class="checkout-right-side-heading">
                        <h3>Order Summary</h3>
                    </div>
                    <div class="number-of-items-in-cart">
                        <p><span>2</span><span>items in cart</span></p>
                    </div>
                    <div class="checkout-right-side-products">
                        <div class="checkout-right-side-products-item">
                            <img src="../img/catalog-page-product-5.jpg" 
                                alt="image of product"
                                loading="lazy">
                            <div class="checkout-product-spans-wrapper">
                                <p>MSI MEG Trident X 10SD-1012AU Intel i7 10700K, 2070 SUPER...</p>
                                <div class="checkout-bottom-part">
                                    <p>Qty <span>1</span></p>
                                    <p>$3,799.00</p>
                                </div>
                            </div>
                        </div>
                        <div class="checkout-right-side-products-item">
                            <img src="../img/catalog-page-product-5.jpg" 
                                alt="image of product"
                                loading="lazy">
                            <div class="checkout-product-spans-wrapper">
                                <p>MSI MEG Trident X 10SD-1012AU Intel i7 10700K, 2070 SUPER...</p>
                                <div class="checkout-bottom-part">
                                    <p>Qty <span>1</span></p>
                                    <p>$3,799.00</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

